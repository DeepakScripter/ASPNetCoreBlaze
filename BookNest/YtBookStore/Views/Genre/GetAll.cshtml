@model IEnumerable<YtBookStore.Models.Domain.Genre> <!-- Define the model for this view -->

@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Genre/Add">Add more</a> <!-- Button to add more genres -->
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Genres</h3>

            <table  class="table table-stripped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Name</th> <!-- Column for genre names -->
                        <th>Action</th> <!-- Column for actions -->
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model){ <!-- Loop through each genre -->
                    <tr>
                        <td>@item.Name</td> <!-- Display the name of the genre -->
                        <td>
                                <a class="btn btn-success" href="/Genre/Update?id=@item.Id"><i class="bi bi-pen"></i> Edit</a> | <!-- Button to edit the genre -->
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Genre/Delete?id=@item.Id"><i class="bi bi-trash"></i> Delete</a> <!-- Button to delete the genre -->
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
