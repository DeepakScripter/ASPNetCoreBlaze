@model YtBookStore.Models.Domain.Publisher
@{
}

<!-- Form to add a new publisher -->
<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Add Publisher</h3>
            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label asp-for="PublisherName">PublisherName *</label>
                    <input type="text" class="form-control" asp-for="PublisherName" />
                    <span asp-validation-for="PublisherName" class="text-danger"></span>
                </div>

                <!-- Display any validation message -->
                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <!-- Submit and cancel buttons -->
                    <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Save</button>
                    <a href="/Publisher/GetAll" class="btn btn-primary"> <i class="bi bi-list"></i>List</a>
                </div>

            </form>
        </div>
    </div>
</div>
