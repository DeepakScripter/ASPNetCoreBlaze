@model YtBookStore.Models.Domain.Author <!-- Define the model for this view -->

@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Add Author</h3>
            <form asp-action="Add" method="post"> <!-- Form for adding a new author -->
                <div class="form-group">
                    <label asp-for="AuthorName">AuthorName *</label> <!-- Label for AuthorName -->
                    <input type="text" class="form-control" asp-for="AuthorName" /> <!-- Input field for AuthorName -->
                    <span asp-validation-for="AuthorName" class="text-danger"></span> <!-- Span for displaying validation errors -->
                </div>

                @if (TempData["msg"] != null) <!-- Check if there's a message stored in TempData -->
                {
                    <div class="form-group">
                        @TempData["msg"] <!-- Display the message if present -->
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Save</button> <!-- Submit button -->
                    <a href="/Author/GetAll" class="btn btn-primary"> <i class="bi bi-list"></i>List</a> <!-- Link button to view all authors -->
                </div>

            </form>
        </div>
    </div>
</div>
