@model YtBookStore.Models.Domain.Author <!-- Define the model for this view -->

@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Update Author</h3>

            <form asp-action="Update" method="post"> <!-- Form to update the author -->
                <input type="hidden" asp-for="Id" /> <!-- Hidden field to store the author's ID -->

                <div class="form-group">
                    <label asp-for="AuthorName">Author Name *</label> <!-- Label for Author Name -->
                    <input type="text" class="form-control" asp-for="AuthorName" /> <!-- Input field for Author Name -->
                    <span asp-validation-for="AuthorName" class="text-danger"></span> <!-- Validation message for Author Name -->
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"] <!-- Display message from TempData -->
                    </div>
                }

                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Save</button> <!-- Button to save changes -->
                    <a href="/Author/GetAll" class="btn btn-primary"> <i class="bi bi-list"></i>List</a> <!-- Link to go back to author list -->
                </div>
            </form>
        </div>
    </div>
</div>
