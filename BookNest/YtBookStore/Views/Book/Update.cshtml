@model YtBookStore.Models.Domain.Book <!-- Define the model for this view -->

@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Update Book</h3>
            <form asp-action="Update" method="post">
                <input type="hidden" class="form-control" asp-for="Id" /> <!-- Hidden input field for Id -->

                <div class="form-group">
                    <label asp-for="Title">Title *</label> <!-- Label for Title -->
                    <input type="text" class="form-control" asp-for="Title" /> <!-- Input field for Title -->
                    <span asp-validation-for="Title" class="text-danger"></span> <!-- Validation message for Title -->
                </div>

                <div class="form-group">
                    <label asp-for="GenreId">Genre *</label> <!-- Label for Genre -->
                    <select asp-for="GenreId" asp-items="Model.GenreList" class="form-control"> <!-- Dropdown for Genre -->
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="GenreId" class="text-danger"></span> <!-- Validation message for Genre -->
                </div>

                <div class="form-group">
                    <label asp-for="Isbn">Isbn *</label> <!-- Label for Isbn -->
                    <input type="text" class="form-control" asp-for="Isbn" /> <!-- Input field for Isbn -->
                    <span asp-validation-for="Isbn" class="text-danger"></span> <!-- Validation message for Isbn -->
                </div>

                <div class="form-group">
                    <label asp-for="TotalPages">Total Pages *</label> <!-- Label for Total Pages -->
                    <input type="number" class="form-control" asp-for="TotalPages" /> <!-- Input field for Total Pages -->
                    <span asp-validation-for="TotalPages" class="text-danger"></span> <!-- Validation message for Total Pages -->
                </div>

                <div class="form-group">
                    <label asp-for="AuthorId">Author *</label> <!-- Label for Author -->
                    <select asp-for="AuthorId" asp-items="Model.AuthorList" class="form-control"> <!-- Dropdown for Author -->
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span> <!-- Validation message for Author -->
                </div>

                <div class="form-group">
                    <label asp-for="Title">Publisher *</label> <!-- Label for Publisher -->
                    <select asp-for="PubhlisherId" asp-items="Model.PublisherList" class="form-control"> <!-- Dropdown for Publisher -->
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="PubhlisherId" class="text-danger"></span> <!-- Validation message for Publisher -->
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Save</button> <!-- Button to save changes -->
                    <a href="/Book/GetAll" class="btn btn-primary"> <i class="bi bi-list"></i>List</a> <!-- Button to go back to book list -->
                </div>

            </form>
        </div>
    </div>
</div>
